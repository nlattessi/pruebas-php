{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Images</div>
                <div class="panel-body">
                    <form action="{{ path_for('images.upload') }}" method="post" autocomplete="off" enctype="multipart/form-data">
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="name" name="name" id="name" placeholder="slider01.xxx" class="form-control" value="{{ old.name }}">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="file">Select image to upload</label>
                            <input type="file" name="newFile">
                        </div>
                        <button type="submit" class="btn btn-default">Upload</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>        
    </div>
{% endblock %}
